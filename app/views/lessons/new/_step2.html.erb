<%= form_tag(lesson_create_path(id: @lesson_obj.id, form_step:3), method: :post, multipart: true, class: "Form") do %>

  <%= field_set_tag 'How does this align to standards?', class: 'Form__fieldset' do %>

    <div class="FormFieldGroups FormFieldGroups--multiple">

      <div class="FormFieldGroup" data-values="<%= @lesson_obj.standards.to_json %>">

        <!-- lesson.standards -->
        <div class="FormField FormField--required">

          <div class="FormField__info">
            <label class="FormField__label" for="lesson_standards__standard_id_1">Standard name</label>
            <div class="FormField__hint">What is the overarching standard</div>
          </div>

          <div class="FormField__input FormField--multiple">
            <select name="lesson[standards][][standard_id]" id="lesson_standards__standard_id_1">
                <%= options_for_select(@standards) %>
            </select>
          </div>

        </div>

        <div class="FormField FormField--required">

          <div class="FormField__info">
            <label class="FormField__label" for="lesson_standards_description_1">Description</label>
            <div class="FormField__hint">What is the overarching standard</div>
          </div>

          <div class="FormField__input FormField--multiple">
            <textarea name="lesson[standards][][description]" class="Input Input--multiple" value="" placeholder="+ Add a new standard" id="lesson_standards_description_1"></textarea>
          </div>

        </div>

      </div>

      <button class="FormFieldGroups__add Button Button--secondary">Add a new standard</button>

    </div>

  <% end %>

  <div class="Form__footer">

    <div class="Form__footer__content">

      <div class="Form__footer__actions">
        <a href="#" class="Form__footer__action Button Button--primary Button--small Button--icon Button--icon--left Button--arrow--left">Back to overview</a>
        <button class="Form__footer__action Button Button--primary Button--small Button--icon Button--icon--right Button--arrow--right">Add some details</button>
      </div>

    </div>

  </div>

<% end %>
