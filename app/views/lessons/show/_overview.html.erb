            <img src="<%= image_url("lessons/show/catan#{i+1}.jpg") %>"
              data-sizes="auto"
              data-srcset="<%= image_url("lessons/show/catan#{i+1}.jpg") %> 1x, <%= image_url("lessons/show/catan#{i+1}.jpg") %> 2x"
              class="Image Image--lazy" />
