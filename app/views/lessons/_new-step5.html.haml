      $.getJSON($('#fileupload').prop('action'), function (files) {
        $.each(files, function(index,key){
          $.each(key, function(index,file){
            var content = tmpl('template-teaser');
            $('.field--image-gallery').append(tmpl('template-teaser',file));
          });
        });
      
      });
    });

