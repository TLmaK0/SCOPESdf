<div class="Auth">

  <div class="Auth__header" style="background-image: url('https://unsplash.it/1600/800?random')">
    <h1 class="Auth__header__heading">Log into SCOPES-DF</h1>
  </div>

  <div class="Auth__form">

    <%= render partial: 'devise/shared/nav' %>

    <div class="FormHeader">
      <h3 class="FormHeader__heading">Got your account details?</h3>
      <div class="FormHeader__description">
        Log in below for access to SCOPES-DF
      </div>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'Form' }) do |f| %>

      <%= render 'devise/form_email' %>

      <%= render 'devise/form_password' %>

      <% if devise_mapping.rememberable? -%>
      <div class="FormField FormField--vertical">

        <div class="FormField__input">
          <div class="Checkboxes">
            <div class="Checkbox">
              <input type="checkbox" class="Checkbox__input" name="user[remember_me]" id="user_remember_me" />
              <label class="Checkbox__label" for="user_remember_me">
                Remember me
              </label>
            </div>
          </div>
        </div>

      </div>
      <% end -%>

      <div class="Form__actions">
        <%= f.submit "Sign in", class: "Button Button--primary" %>
      </div>

    <% end %>

    <%= render "devise/shared/links" %>

  </div>

</div>
