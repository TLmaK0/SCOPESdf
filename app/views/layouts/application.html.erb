<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml" lang="en-US">

	<%= render partial: 'layouts/head' %>

	<body>

		<%= render partial: 'layouts/flash' if flash.present? %>

		<!-- container -->
		<div class="Container <%= @has_hero ? 'Container--has-hero' : nil %>">

				<!-- header -->
				<header class="Header Header--white" data-turbolinks-permanent>

					<div class="Header__content">

						<%= link_to "<span>ScopesDF</span>".html_safe, root_path, class: "Logo" %>

						<form class="Search" method="get" action="<%= search_path %>">
							<input type="search" class="Search__input" name="q" value="<%= @query %>" />
						</form>

						<%= render 'components/navigation' %>

						<% if signed_in? %>

							<a class="UserStatus">
								<div class="UserStatus__text">
									<div class="UserStatus__name"><%= current_user.name %></div>
									<div class="UserStatus__role">Teacher</div>
								</div>
								<div class="UserStatus__image">
									<img src="<%= image_url('avatars/avatar2.jpg') %>" class="Image Image--lazy" />
								</div>
							</a>

							<div class="UserStatusButtons">
								<%= active_link_to 'Log out', destroy_user_session_path, method: :delete, class: "Button Button--small Button--primary" %>
							</div>

						<% else %>

							<div class="Toolbar">
								<%= active_link_to 'Log in', new_user_session_path, class: "Toolbar__tool Toolbar__tool--login Button" %>
								<%= active_link_to 'Register', new_user_registration_path, class: "Toolbar__tool Toolbar__tool--register Button" %>
							</div>

						<% end %>

						<button class="ToggleMobileMenu"><span>Menu</span></button>

						<div class="MobileMenu">

							<div class="MobileMenu__header">
								<%= link_to "<span>ScopesDF</span>".html_safe, root_path, class: "MobileMenu__logo" %>
								<button class="MobileMenu__close"><span>Close</span></button>
							</div>

							<div class="MobileMenu__content">

								<% if signed_in? %>
								<div class="MobileMenu__user__status">
									<a class="MobileMenu__user">
										<div class="UserStatus__image">
											<img src="<%= image_url('avatars/avatar2.jpg') %>" class="Image Image--lazy" />
										</div>
										<div class="UserStatus__text">
											<div class="UserStatus__name"><%= current_user.name %></div>
											<div class="UserStatus__role">Teacher</div>
										</div>
									</a>
									<div class="MobileMenu__user__actions">
										<%= active_link_to 'Edit', edit_user_registration_path, method: :delete %>
										<%= active_link_to 'Log out', destroy_user_session_path, method: :delete %>
									</div>
								</div>
								<% else %>
								<div class="MobileMenu__user__buttons">
									<%= active_link_to 'Log in', new_user_session_path, class: "Button Button--small Button--border" %>
									<%= active_link_to 'Register', new_user_registration_path, class: "Button Button--primary Button--small" %>
								</div>
								<% end %>
								

								<ul class="MobileMenu__navigation">
									<li class="MobileMenu__navigation__item"><%= active_link_to 'Lessons', lessons_path, class: "MobileMenu__navigation__link", class_active: "MobileMenu__navigation__link--active" %></li>
    								<li class="MobileMenu__navigation__item"><%= active_link_to 'People', people_path, class: "MobileMenu__navigation__link", class_active: "MobileMenu__navigation__link--active" %></li>
    								<li class="MobileMenu__navigation__item"><%= active_link_to 'Places', places_path, class: "MobileMenu__navigation__link", class_active: "MobileMenu__navigation__link--active" %></li>
    								<li class="MobileMenu__navigation__item"><%= active_link_to 'About', about_path, class: "MobileMenu__navigation__link MobileMenu__navigation__link", class_active: "MobileMenu__navigation__link--active" %></li>
								</ul>

							</div>

							<div class="MobileMenu__footer">


							</div>

						</div>

					</div>

				</header>
				<!-- .header -->

				<%= yield %>

		</div>
		<!-- .container -->

		<!-- footer -->
		<footer class="Footer">

			<div class="Footer__content">

				<div class="Footer__logo-statement">

					<a href="/" class="Footer__logo"><span>ScopesDF</span></a>

					<div class="Footer__statement">
						Connect & Share lesson plans<br />
						with STEM educators everywhere.
					</div>

				</div>

				<div class="Footer__navigation">

					<%= render 'components/navigation' %>

				</div>

				<div class="Footer__social">

					<div class="SocialLinks">
						<a href="#" class="SocialLinks__link SocialLinks__link--slack"><span>Slack</span></a>
						<a href="#" class="SocialLinks__link SocialLinks__link--twitter"><span>Twitter</span></a>
						<a href="#" class="SocialLinks__link SocialLinks__link--facebook"><span>Facebook</span></a>
					</div>

				</div>

			</div>

		</footer>
		<!-- .footer -->

	</body>

</html>
